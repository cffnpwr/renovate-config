{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDepNames": [
        "{npm:,}{@types/,}node"
      ],
      "versioning": "node"
    },
    {
      "matchManagers": [
        "npm",
        "bun"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "{{manager}} development dependencies (non-major)"
    },
    {
      "matchManagers": [
        "npm",
        "bun"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dependencies",
        "optionalDependencies"
      ],
      "groupName": "{{manager}} production dependencies (non-major)"
    },
    {
      "matchManagers": [
        "npm",
        "bun"
      ],
      "matchDepNames": [
        "{npm:,jsr:,}@cffnpwr/**"
      ],
      "groupName": null,
      "schedule": "* * * * *", // Every minute
      "minimumReleaseAge": null
    }
  ]
}
