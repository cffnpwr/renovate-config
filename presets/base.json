{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "schedule": "* 0-3 * * *", // Every day at 00:00-03:00
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":pinAllExceptPeerDependencies"
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "rebaseWhen": "automerging",
  "commitMessageAction": ":package: Update",
  "lockFileMaintenance": {
    "enabled": false,
    "schedule": "* 0-3 * * 1", // Every Monday at 00:00-03:00
    "commitMessageAction": ":package: Lock file maintenance"
  }
}
